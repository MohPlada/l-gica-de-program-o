algoritmo "EX003"

var

m, n : Caractere
o : Real

inicio

  Escreva ("Olá querido funcionário,digite seu nome: ")
  Leia (m)
  EscrevaL ( m, ",agora digite o valor do seu salário: ")
  Leia (o)
  EscrevaL ("Em que mês estamos? ")
  Leia (n)
  EscrevaL (m, ", tem um salário de ", o," em ", n, ".")


fimalgoritmo
